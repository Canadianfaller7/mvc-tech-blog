<!-- display registration form if user is not logged in -->
<!-- otherwise they get to create new posts as a registered user -->

<div class="title-bar">
    <h1 class="container py-2">Update Post</h1>
</div>

<div class="create-a-post container">
  {{#if posts}}
    {{#each posts as |post|}}

      <form class='form update-a-post-form' data-id="{{post.id}}" data-func="update">

        <div class='form-group'>
          <input class='form-input' type='text' id='update-title' value='{{post.title}}' placeholder='title' />
        </div>

        <div class='form-group'>
          <textarea class='form-input' id='update-description'>{{post.description}}</textarea>
        </div>
    {{/each}}
      <div class='form-group'>
          <button class='btn' type='submit'>UPDATE POST</button>
      </div>
  {{/if}}
        <div class='form-group'>
          <a href="/dashboard">cancel</a>
        </div>
      </form>
</div>
<script src="/js/updatePost.js"></script>
