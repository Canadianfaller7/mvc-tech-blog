
<div class="col-sm-6 col-md-6 col-lg-5 col-xl-4 container container-fluid mt-5">
  <div class="login-container">
    <div class="title-bar">
        <h1 class="container py-2 text-center">Login</h1>
    </div>
    <form class="form login-form">
      <div class="form-group">
        <input class="form-input" type="text" id="username-login" placeholder="Username"/>
      </div>
      <div class="form-group">
        <input class="form-input" type="password" id="password-login" placeholder="Password"/>
      </div>
      <div class="form-group">
        <button class="btn col-md-auto login-btn" type="submit">Login</button>
      </div>
      <div class='form-group'>
        <a href="/signUp" class="btn col-md-auto" id="signup-btn">Sign Up</a>
      </div>
    </form>
  </div>
</div>

