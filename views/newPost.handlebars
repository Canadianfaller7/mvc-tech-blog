
<div class="create-a-post container">
  <div class="title-bar">
    <h1 class="container py-2">Create a Post</h1>
  </div>
  <form class="form create-a-post-form">
    <div class='form-group'>
      <input class='form-input' type='text' id='newpost-title' placeholder='title' />
    </div>

    <div class='form-group'>
      <textarea class='form-input' id='newpost-description'></textarea>
    </div>

    <div class='form-group'>
      <button class="btn col-md" type="submit">SAVE POST</button>
    </div>

    <div class='form-group'>
      <a href="/dashboard" class="btn col-md" id="signup-btn">CANCEL</a>
    </div>
  </form>
</div>
<script src="/js/posts.js"></script>